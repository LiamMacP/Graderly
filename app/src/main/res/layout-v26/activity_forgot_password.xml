<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity"
    android:background="?attr/colorPrimary"
    android:theme="@style/AppTheme.Dark"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/forgot_password_appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/forgot_password_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/forgot_password_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="120dp"
        android:layout_marginStart="@dimen/center_header_horizontal"
        android:layout_marginEnd="@dimen/center_header_horizontal"
        android:textSize="48sp"
        android:textColor="@color/white"
        android:text="@string/forgot_password_title"
        app:layout_constraintTop_toBottomOf="@id/forgot_password_appbarlayout" />

    <TextView
        android:id="@+id/forgot_password_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        android:layout_marginStart="@dimen/center_instructions_horizontal"
        android:layout_marginEnd="@dimen/center_instructions_horizontal"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="@string/forgot_password_instructions"
        app:layout_constraintTop_toBottomOf="@id/forgot_password_header" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/forgot_password_email_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginStart="@dimen/center_instructions_horizontal"
        android:layout_marginEnd="@dimen/center_instructions_horizontal"
        app:layout_constraintTop_toBottomOf="@id/forgot_password_instructions">
        <EditText android:id="@+id/forgot_password_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/email_text"
            android:autofillHints="email"
            tools:ignore="TextFields" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/forgot_password_send_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/center_instructions_horizontal"
        android:layout_marginEnd="@dimen/center_instructions_horizontal"
        app:layout_constraintTop_toBottomOf="@id/forgot_password_email_input_layout"
        android:text="@string/forgot_password_send_instructions" />

    <ProgressBar
        android:id="@+id/forgot_password_progress_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:backgroundTint="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="@dimen/center_instructions_horizontal"
        android:layout_marginEnd="@dimen/center_instructions_horizontal"
        app:layout_constraintTop_toBottomOf="@id/forgot_password_send_request"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/forgot_password_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/forgot_password_send_request"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>